<style>

footer{
    background-image: url("../Assets/bg-footer.png"); 
    background-size: cover;
    background-repeat: no-repeat;
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-items: center;
    padding-top: 5%;
    padding-bottom: 10%;
 } 

#grid_1-1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    
    justify-items: center;
    color: var(--bg);

text-align: center;
}

#someSymbol img {
    max-width: 70%;
    max-height: 70%;
}

.button {
    margin-top: 6%;
    text-align: center;
}

.sectionLeft p{
margin-top: 7%;
font-size: 20px;
}

.mobile {
    display: none;
}


@media only screen and (max-width: 600px) {
footer {
    display: block;
}

.sectionLeft {
    display: none;
}

.mobile {
    display: block;
    margin-left: 5%;
}

.mobile p{
  line-height: 50px;
}

}
 </style>