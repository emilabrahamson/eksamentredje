<style>
#mobileImg {
    display: none;
}

#grid_1-1-1 {
    padding-top: 3%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    background-color: var(--bg);
    color: white;
    justify-items: center;
    padding-bottom: 5%;
}

#grid_1-1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    margin-top: 20%;
    justify-items: center;
}

.sectionImg {
    margin-top: 5%;
}

#someSymbol img {
    max-width: 100%;
    max-height: 100%;
}

p {
    margin-top: 4%;
    margin-bottom: 4%;
}

@media only screen and (max-width: 600px) {
    #grid_1-1-1 {
        display: block;
        margin-top: 0%;
    }

    #grid_1-1-1-1 {
    display: none;
    margin-top: 0%;
}

.sectionImg, #someSymbol {
    display: none;
}

