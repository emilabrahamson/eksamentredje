    display: block; 
    text-align: center;
    margin-bottom: 5%;
    margin-top: 5%;
}

#mobileImg img {
   width: 93px;
   height: 93px; 
  
}

.sectionText {
    margin-left: 5%;
}

.sectionText h1{
   font-size: 18px;
}

