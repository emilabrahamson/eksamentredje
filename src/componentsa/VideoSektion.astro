    <Button03 />
<Button05 />
</div>
</div>
 </div>
<style>
    h1 {
        margin-top: 5%;
        margin-bottom: 2%;
    }
    h2{
        color: var(--green);
        font-weight: 500;
        margin-bottom: 4%;
    }
p{
    margin-top: 1%;
    font-weight: bold;
}

    #video {
        margin: auto;
        width: 50%;
    }
    #bg-video {
        background-image: url("../assets/bg-video.png"); 
       background-size: cover;
       background-repeat: no-repeat;  
       padding-bottom: 4%;
    }

    .button {
    margin-top: 3%;
    text-align: center;
}

#mobile {
    display: none;
}

@media only screen and (max-width: 600px) {
    #web {
        display: none;
    }
    #mobile {
    display: inline;
}
    #video {
width: auto;
text-align: center;
    }

    h1, h2 {
        text-align: center;
    }
#textWeb {
    display: none;
}
}
</style>