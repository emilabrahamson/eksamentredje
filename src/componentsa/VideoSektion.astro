import Button05 from "./Button05.astro";
---
<div id="bg-video"><div id="video">
<h1>Vores fremhævet video</h1>
<h2>"En Verden Af Plastik"</h2>
<div id="web">
<iframe width="770" height="450" src="https://www.youtube.com/embed/7eivTQkBYvo?si=3aaxUKzQSnZPNh3y" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>
<div id="mobile">
    <iframe width="385" height="225" src="https://www.youtube.com/embed/7eivTQkBYvo?si=3aaxUKzQSnZPNh3y" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
    <div id="textWeb">
